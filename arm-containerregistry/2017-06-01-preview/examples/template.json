{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "resources": [
        {
            "name": "myRegistry",
            "type": "Microsoft.ContainerRegistry/registries",
            "location": "westus",
            "apiVersion": "2017-03-01",
            "sku": {
                "name": "Premium"
            },
            "properties": {
                "adminUserEnabled": true
            }
        },
        {
            "name": "myWebhook1",
            "type": "Microsoft.ContainerRegistry/registries/webhooks",
            "location": "westus",
            "apiVersion": "2017-06-01-preview",
            "dependsOn": [
                "[resourceId('Microsoft.ContainerRegistry/registries', 'myRegistry')]"
            ],
            "properties": {
                "serviceUri": "http://myservice1.com",
                "isEnabled": true,
                "scope": "/myRepository",
                "events": [
                    "push",
                    "delete"
                ]
            }
        },
        {
            "name": "myWebhook2",
            "type": "Microsoft.ContainerRegistry/registries/webhooks",
            "location": "westus",
            "apiVersion": "2017-06-01-preview",
            "dependsOn": [
                "[resourceId('Microsoft.ContainerRegistry/registries', 'myRegistry')]"
            ],
            "properties": {
                "serviceUri": "http://myservice2.com",
                "isEnabled": true,
                "scope": "/myRepository:myTag",
                "events": [
                    "push",
                    "pull"
                ]
            }
        },
        {
            "name": "myReplication1",
            "type": "Microsoft.ContainerRegistry/registries/replications",
            "location": "eastus",
            "apiVersion": "2017-06-01-preview",
            "dependsOn": [
                "[resourceId('Microsoft.ContainerRegistry/registries', 'myRegistry')]"
            ],
            "properties": {
                "isEnabled": true
            }
        },
        {
            "name": "myReplication2",
            "type": "Microsoft.ContainerRegistry/registries/replications",
            "location": "centralus",
            "apiVersion": "2017-06-01-preview",
            "dependsOn": [
                "[resourceId('Microsoft.ContainerRegistry/registries', 'myRegistry')]"
            ],
            "properties": {
                "isEnabled": true
            }
        }
    ]
}